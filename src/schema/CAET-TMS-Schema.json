  "program": {
    "name": "CAET Advanced Practical Qualification",
    "authority": "Aircraft Electronics Association (AEA)",
    "competency_standard": "Would I trust this technician to do this task unsupervised on an aircraft going back to a customer tomorrow?",
    "competency_definition": {
      "correctly": "Following approved procedures",
      "independently": "Without step-by-step guidance",
      "safely": "Without creating hazards",
      "consistently": "Not just once by luck"
    },
    "certification_flow": [
      {
        "step": 1,
        "gate": "practical_tasks",
        "description": "Complete all 65 tasks signed off by authorized evaluators",
        "prerequisite": null
      },
      {
        "step": 2,
        "gate": "written_exam",
        "description": "Pass CAET Advanced written examination (170 questions)",
        "prerequisite": "practical_tasks"
      },
      {
        "step": 3,
        "gate": "oral_board",
        "description": "Pass oral board examination with AEA Workforce Committee",
        "prerequisite": "written_exam"
      },
      {
        "step": 4,
        "gate": "certificate_issued",
        "description": "CAET Advanced Practical Qualification certificate issued",
        "prerequisite": "oral_board"
      }
    ],
    "time_limit_months": 36,
    "time_limit_note": "All 65 tasks must be completed within 36 months of enrollment date"
  },
  "roles": {
    "admin": {
      "description": "AEA program administrator",
