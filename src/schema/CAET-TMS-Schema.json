  "evaluator_training": {
    "description": "Required training for shop evaluators before they can sign off tasks",
    "modules": [
      {
        "id": "ET-01",
        "title": "The Competency Standard",
        "description": "Understanding what 'competent' means and the evaluation mindset",
        "topics": [
          "The trust question \u2014 would you put your name on this technician's work?",
          "Competent vs proficient vs expert \u2014 we're testing competent",
          "Observation vs testing \u2014 you watch them do it, you don't quiz them",
          "Avoiding teaching during evaluation \u2014 evaluate first, coach after"
        ],
        "duration_minutes": 30,
        "assessment": "Scenario: Given 3 evaluation descriptions, identify which demonstrate competency and which don't"
      },
      {
        "id": "ET-02",
        "title": "Using the Evaluation Guides",
        "description": "How to apply accept/reject criteria consistently",
        "topics": [
          "Reading the task preparation briefs",
          "Observable behaviors vs assumptions",
          "Critical errors \u2014 what's an automatic not-yet",
          "Documenting what you observe in notes"
        ],
        "duration_minutes": 30,
        "assessment": "Given a task evaluation scenario, write appropriate sign-off notes"
      },
      {
        "id": "ET-03",
        "title": "Common Evaluation Pitfalls",
        "description": "Avoiding bias and maintaining standards across candidates",
        "topics": [
          "Halo effect \u2014 good in one area doesn't mean good in all",
          "Familiarity bias \u2014 your best tech still needs to demonstrate",
          "Anchoring \u2014 first impression isn't the whole evaluation",
          "The hardest part: saying 'not yet' to someone you know"
        ],
        "duration_minutes": 20,
        "assessment": "Identify the bias in 4 evaluation scenarios"
      },
      {
        "id": "ET-04",
        "title": "Using the Digital System",
        "description": "How to use the TMS platform for sign-offs and tracking",
        "topics": [
          "Logging in and finding your students",
          "Signing off tasks \u2014 the digital work card",
          "Writing effective sign-off notes",
          "Reversing a sign-off \u2014 when and how"
        ],
        "duration_minutes": 20,
        "assessment": "Complete a guided walkthrough of the platform"
      },
      {
        "id": "ET-05",
        "title": "Calibration Exercise",
        "description": "Watch evaluation scenarios and score them to calibrate standards",
        "topics": [
          "Scenario 1: Clear competency demonstration",
          "Scenario 2: Borderline \u2014 needed one prompt",
          "Scenario 3: Not yet qualified \u2014 multiple errors",
          "Discussion: Where's the line?"
        ],
        "duration_minutes": 30,
        "assessment": "Score all 3 scenarios correctly with appropriate justification"
      }
    ],
    "completion_requirement": "All 5 modules completed with all assessments passed",
    "recurrent_interval_months": 24,
    "recurrent_content": "ET-03 (pitfalls review) and ET-05 (recalibration exercise)"
